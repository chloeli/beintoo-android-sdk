<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myScroll" android:layout_width="fill_parent"
	android:scrollbars="vertical" android:layout_height="fill_parent"
	android:fillViewport="true">
	<RelativeLayout
		android:orientation="vertical" android:layout_width="fill_parent"
		android:gravity="center"
		android:background="#e7e8e9" android:id="@+id/mainlayout" android:layout_height="fill_parent">
			
	<ImageView android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:id="@+id/beintoobar" android:layout_width="fill_parent" android:background="@drawable/beintoobar"/>
	<Button android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/close"
		android:layout_alignParentRight="true"
		 android:background="@drawable/close" android:layout_margin="12dip"/>
	<TextView android:textStyle="bold" android:text="Welcome back" android:id="@+id/nickname" android:layout_height="wrap_content" android:layout_marginTop="45dip" android:background="#afd4e3" android:layout_width="fill_parent" android:textColor="#FFFFFF" android:padding="10dip"></TextView>
	<RelativeLayout android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/homebg"
		android:layout_alignParentBottom="false" android:gravity="center"
		android:layout_centerHorizontal="true" android:id="@+id/btable" android:layout_marginTop="100dip">
		<TableLayout android:id="@+id/myTableLayout"
			android:layout_height="wrap_content" android:scrollbars="vertical"
			android:background="#FFFFFF" android:layout_width="wrap_content">
			<TableRow android:background="#f4f5f6">
				<ImageButton android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/profilebt"
					android:layout_alignParentTop="true" android:background="@drawable/profilebt" android:layout_margin="10dip">
				</ImageButton>
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/leaderboardbt"
					android:background="@drawable/leaderbt" android:layout_margin="10dip">
				</Button>
			</TableRow>
			<TableRow android:background="#f4f5f6">
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/walletbt"
					android:background="@drawable/wallet" android:layout_margin="10dip">
				</Button>
				<Button android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true" android:background="@drawable/challenges" android:layout_margin="10dip" android:id="@+id/challengesbt">
				</Button>
			</TableRow>
		</TableLayout>
	</RelativeLayout>	
	<TextView android:text="www.beintoo.com" 
	android:id="@+id/nickname" android:layout_height="wrap_content" 
	android:layout_width="fill_parent" android:textColor="#56b3d8"
	android:gravity="center" android:layout_marginTop="405dip"></TextView>
	<ImageView android:layout_height="wrap_content"
		android:id="@+id/layoutbottom"
		android:layout_alignParentBottom="true" android:background="@drawable/layoutbottom" android:layout_width="fill_parent">
	</ImageView>
	</RelativeLayout>
	</ScrollView>
	
