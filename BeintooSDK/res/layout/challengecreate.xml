<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myScroll" android:layout_width="wrap_content"
	android:scrollbars="vertical" android:layout_height="fill_parent"
	android:fillViewport="true" android:padding="0dip">
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:id="@+id/maincontainer"
		android:orientation="vertical" android:background="#dddddd">
		<LinearLayout android:layout_width="wrap_content"
			android:orientation="vertical" android:id="@+id/maincontent"
			android:layout_height="wrap_content" android:layout_marginTop="0dip">
			<LinearLayout android:layout_width="fill_parent"			    
				android:orientation="vertical" android:id="@+id/content"
				android:layout_height="wrap_content">
				<LinearLayout android:id="@+id/row1" android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content">
				    <!-- <LinearLayout android:layout_width="fill_parent"
						android:layout_height="0.75dip" android:background="#FFFFFF"
						android:id="@+id/whiteline"></LinearLayout>
					<LinearLayout android:layout_width="fill_parent" android:layout_height="0.75dip" 
					    android:background="#8F9193" android:id="@+id/grayline"></LinearLayout>  -->
					<LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent"
						    android:layout_height="wrap_content" android:orientation="horizontal" android:paddingLeft="15dip">
						<LinearLayout android:id="@+id/row1textcontent" android:layout_width="wrap_content" android:layout_height="wrap_content" 
						    android:orientation="vertical" android:layout_weight="1" android:layout_gravity="center">
						    <TextView android:id="@+id/mevsyou" android:layout_width="wrap_content" android:textColor="#000000"
						        android:layout_height="wrap_content" android:text="@string/challmevsyoutitle" android:textStyle="bold"/>
						    <TextView android:id="@+id/mevsyoudesc" android:layout_width="wrap_content" android:textColor="#6a6a6a"
						        android:layout_height="wrap_content" android:text="@string/challmevsyou" />
						</LinearLayout>					
						<ImageView android:id="@+id/imageView1" android:layout_width="wrap_content"
						    android:layout_height="wrap_content" android:src="@drawable/challvs" android:layout_marginRight="5dip"/>
					</LinearLayout>	    						
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/row1create" android:visibility="gone"></LinearLayout>
				    
				<!-- row2 -->
				
				<LinearLayout android:id="@+id/row2" android:layout_width="fill_parent" android:layout_height="wrap_content" 
				    android:orientation="vertical">					
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="0.75dip" android:background="#8F9193"
						android:id="@+id/grayline"></LinearLayout>	
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="0.75dip" android:background="#FFFFFF"
						android:id="@+id/whiteline"></LinearLayout>	
					<LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:paddingLeft="15dip"
						    android:layout_height="wrap_content" android:orientation="horizontal">	
						<LinearLayout android:id="@+id/row2textcontent" android:layout_width="wrap_content"
						    android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:layout_gravity="center">
						    <TextView android:id="@+id/challfriends" android:layout_width="wrap_content" android:textColor="#000000"
						        android:layout_height="wrap_content" android:text="@string/challFriendstitle" android:textStyle="bold"/>
						    <TextView android:id="@+id/challfriendsdesc" android:layout_width="wrap_content" android:textColor="#6a6a6a"
						        android:layout_height="wrap_content" android:text="@string/challFriends" />
						</LinearLayout>					
						<ImageView android:id="@+id/imageView2" android:layout_width="wrap_content"
						    android:layout_height="wrap_content" android:src="@drawable/challon" android:layout_marginRight="5dip"/>
					</LinearLayout>
				</LinearLayout>				
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/row2create" android:visibility="gone"></LinearLayout>
				    
				<!-- row3 -->				
				<LinearLayout android:id="@+id/row3" android:layout_width="fill_parent" android:layout_height="wrap_content" 
				    android:orientation="vertical">					
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="0.75dip" android:background="#8F9193"
						android:id="@+id/grayline"></LinearLayout>
					<LinearLayout android:layout_width="fill_parent"
					android:layout_height="0.75dip" android:background="#FFFFFF"
					android:id="@+id/whiteline"></LinearLayout>
					<LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:paddingLeft="15dip"
						    android:layout_height="wrap_content" android:orientation="horizontal">
						<LinearLayout android:id="@+id/row3textcontent" android:layout_width="wrap_content"
						    android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:layout_gravity="center">
						    <TextView android:id="@+id/chall24" android:layout_width="wrap_content" android:textColor="#000000"
						        android:layout_height="wrap_content" android:text="@string/chall48title" android:textStyle="bold"/>
						    <TextView android:id="@+id/chall48desc" android:layout_width="wrap_content" android:textColor="#6a6a6a"
						        android:layout_height="wrap_content" android:text="@string/chall48" />
						</LinearLayout>
						<ImageView android:id="@+id/imageView3" android:layout_width="wrap_content"
						    android:layout_height="wrap_content" android:src="@drawable/chall48" android:layout_marginRight="5dip"/>
					</LinearLayout>
				</LinearLayout>	
				<!-- <LinearLayout android:layout_width="fill_parent"
					android:layout_height="0.75dip" android:background="#FFFFFF"
					android:id="@+id/whiteline"></LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="0.75dip" android:background="#8F9193"
					android:id="@+id/grayline"></LinearLayout> -->
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/row3create" android:visibility="gone"></LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>