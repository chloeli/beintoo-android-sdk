<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#dddddd">
	<include layout="@layout/beintoobarsmall" />

	<ScrollView android:id="@+id/myScroll" android:layout_width="fill_parent"
		android:scrollbars="vertical" android:layout_height="fill_parent"
		android:fillViewport="true">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/maincontainer"
			android:orientation="vertical" android:background="#dddddd">
			<LinearLayout android:id="@+id/relativeLayout1"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
				<ImageView android:id="@+id/coupon_image"
					android:layout_width="60dip" android:layout_height="60dip"
					android:src="@drawable/alliance" android:layout_marginTop="5dip" />
				<LinearLayout android:id="@+id/LinearLayout2"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_marginLeft="15dip" android:orientation="vertical">
					<TextView android:id="@+id/coupon_name" android:textColor="@color/gray_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="TextView" android:textSize="18dip"
						android:layout_marginTop="5dip" />
					<TextView android:id="@+id/coupon_bedollars"
						android:textColor="@color/light_gray_text" android:layout_width="wrap_content"
						android:layout_height="wrap_content" />
					<RatingBar android:id="@+id/vgood_rating"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_alignParentLeft="true" android:layout_marginTop="5dip"
						android:layout_alignParentTop="true" android:layout_marginBottom="5dip"
						style="?android:attr/ratingBarStyleSmall" />
					<LinearLayout android:id="@+id/linearLayout1"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:layout_marginTop="5dip">
						<ImageButton android:id="@+id/coupon_share_button"
							android:src="@drawable/share" android:layout_width="50dip"
							android:layout_height="30dip" android:background="@drawable/blu_gradient_button" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout3"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:layout_marginTop="10dip">
				<TextView android:id="@+id/coupon_title_large"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="TextView" android:textColor="@color/gray_text"
					android:layout_marginLeft="10dip" android:layout_marginBottom="5dip" />
				<TextView android:id="@+id/coupon_desc" android:textColor="@color/light_gray_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="TextView" android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip" />
				<TextView android:id="@+id/coupon_valid"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="TextView" android:layout_marginLeft="10dip"
					android:layout_marginBottom="5dip" android:layout_marginTop="10dip"
					android:textColor="@color/light_gray_text" />
				<RelativeLayout android:id="@+id/coupon_get_button"
					android:layout_width="fill_parent" android:layout_height="45dip"
					android:background="@drawable/blu_rect_gradient_button"
					android:gravity="center_vertical" android:paddingLeft="10dip"
					android:paddingRight="10dip" android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip" android:layout_marginTop="5dip">
					<TextView android:id="@+id/textView1"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/buynow" android:textColor="@color/white_text"
						android:textStyle="bold" android:layout_alignParentLeft="true" />
					<RelativeLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_alignParentRight="true">
						<TextView android:id="@+id/coupon_bedollars_buy"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="TextView" android:textColor="@color/white_text" />
						<ImageView android:id="@+id/buy_bedollar_logo"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/b02" android:layout_toRightOf="@+id/coupon_bedollars_buy"
							android:layout_marginTop="1dip"/>
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout android:id="@+id/coupon_sendgift_button"
					android:layout_width="fill_parent" android:layout_height="45dip"
					android:background="@drawable/blu_rect_gradient_button"
					android:layout_margin="10dip" android:gravity="center_vertical"
					android:paddingLeft="10dip" android:paddingRight="10dip">
					<TextView android:id="@+id/textView2"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/sendasgift" android:textColor="@color/white_text"
						android:textStyle="bold" android:layout_alignParentLeft="true" />
					<RelativeLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_alignParentRight="true">
						<TextView android:id="@+id/coupon_bedollars_sendgift"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="TextView"
							 android:textColor="@color/white_text" />
						<ImageView android:id="@+id/buy_sendgift_bedollar_logo"
							android:layout_toRightOf="@+id/coupon_bedollars_sendgift"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/b02"
							android:layout_marginTop="1dip"/>
					</RelativeLayout>
				</RelativeLayout>
			</LinearLayout>
			<TextView android:id="@+id/addresslist"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/addresslist" android:textColor="@color/gray_text"
				android:layout_marginTop="10dip" android:paddingLeft="5dip" />
			<ListView android:layout_height="wrap_content" android:id="@+id/listView"
				android:layout_width="fill_parent" android:layout_margin="5dip"
				android:divider="#eee" android:dividerHeight="0.5dip"
				android:fadingEdge="none" android:drawSelectorOnTop="false" />
			<LinearLayout android:id="@+id/fond"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_weight="1" android:gravity="bottom|center"
				android:orientation="vertical">
				<ImageView android:id="@+id/layoutbottom"
					android:layout_width="fill_parent" android:layout_height="11dip"
					android:background="@drawable/footer" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>	