<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/maincontainer"
	android:orientation="vertical" android:background="#dddddd">
	<include layout="@layout/beintoobarsmall" />
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/buttonsll" android:layout_width="fill_parent"
		android:gravity="center">
		<Button android:id="@+id/toConvertGoods" android:textColor="#545859"
			android:layout_height="35dip" android:text="@string/walletNotConverted"
			android:padding="0dip" android:layout_width="fill_parent"
			android:layout_weight="1"></Button>
		<LinearLayout android:layout_width="0.75dip"
			android:layout_height="fill_parent" android:background="#8F9193"
			android:id="@+id/grayline"></LinearLayout>
		<Button android:id="@+id/convertedGoods" android:textColor="#545859"
			android:layout_height="35dip" android:text="@string/walletConverted"
			android:padding="0dip" android:layout_width="fill_parent"
			android:layout_weight="1"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0.75dip" android:background="#8F9193"
		android:id="@+id/grayline"></LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0.75dip" android:background="#FFFFFF"
		android:id="@+id/whiteline"></LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:id="@+id/goodcontent"
		android:layout_height="wrap_content">
		<!-- WALLET CONTENT -->

		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:id="@+id/goodcontent"
			android:layout_height="wrap_content" android:gravity="center">
			
				<ListView android:layout_height="0dip" android:id="@+id/listView"
					android:layout_width="fill_parent" android:scrollbars="vertical"
					android:divider="#8F9193" android:dividerHeight="1dip"
					android:fadingEdge="none" android:drawSelectorOnTop="false"
					android:layout_weight="1"></ListView>
					</LinearLayout>
		<!-- END WALLET CONTENT -->
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:gravity="bottom|center" android:id="@+id/fond">
		<ImageView android:id="@+id/layoutbottom"
			android:layout_width="fill_parent" android:background="@drawable/footer"
			android:layout_height="11dip" />
	</LinearLayout>
</LinearLayout>


