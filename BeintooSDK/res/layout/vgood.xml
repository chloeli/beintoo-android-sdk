<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myScroll" android:layout_width="fill_parent"
	android:scrollbars="vertical" android:layout_height="fill_parent"
	android:fillViewport="true">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/maincontainer"
		android:orientation="vertical" android:background="#dadfe2">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:layout_height="wrap_content">
			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:gravity="center"
				android:background="#dadfe2">
				<ImageView android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:id="@+id/beintoobar"
					android:background="@drawable/beintoobar" android:layout_width="fill_parent" />
				<Button android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/closevgood"
					android:layout_alignParentRight="true" android:background="@drawable/close"
					android:layout_margin="12dip" />
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center">
			<ImageView android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" android:id="@+id/beintoogoodmsg"
				android:background="@drawable/boxcoupon" android:layout_gravity="center"
				android:layout_width="wrap_content" android:layout_marginTop="10dip" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:id="@+id/goodcontent"
			android:background="@drawable/goodcontent" android:layout_height="wrap_content"
			android:layout_marginTop="5dip" android:layout_marginLeft="18dip"
			android:layout_marginRight="18dip">
			<!-- VGOOD CONTENT -->

			<LinearLayout android:layout_width="fill_parent"
				android:orientation="vertical" android:id="@+id/contentgood"
				android:layout_height="wrap_content" android:gravity="center">
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="horizontal" android:id="@+id/firstrow"
					android:layout_height="wrap_content" android:gravity="left"
					android:paddingLeft="20dip" android:paddingTop="20dip">
					<com.beintoo.beintoosdkutility.LoaderImageView
						android:layout_height="80px" android:layout_width="80px"
						android:id="@+id/vgoodpict" />
					<LinearLayout android:layout_width="fill_parent"
						android:orientation="vertical" android:id="@+id/nickdate"
						android:layout_height="wrap_content" android:gravity="left"
						android:paddingLeft="15dip">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/couponname"
							android:text="couponame" android:textColor="#84be41"
							android:textStyle="bold" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="#000000"
							android:layout_marginTop="10dip" android:text="End date:"
							android:id="@+id/endated" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="#a7a7a7"
							android:id="@+id/endate" android:text="end"></TextView>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="horizontal" android:id="@+id/secondtrow"
					android:layout_height="wrap_content" android:gravity="left"
					android:paddingLeft="20dip" android:padding="20dip">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/shortdesc"
						android:text="ShortDesc" android:layout_marginTop="10dip"
						android:textColor="#a7a7a7" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="horizontal" android:id="@+id/secondtrow"
					android:layout_height="wrap_content" android:gravity="left"
					android:paddingLeft="20dip">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/shortdesc"
						android:text="Who also converted" android:layout_marginTop="10dip"
						android:textColor="#a7a7a7" />
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/alsoconverted"
					android:layout_height="wrap_content" android:gravity="left"
					android:paddingLeft="20dip" android:orientation="horizontal" android:padding="20dip">
				</LinearLayout>

			</LinearLayout>
			<!-- END VGOOD CONTENT -->
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:id="@+id/convll"
			android:layout_height="wrap_content" android:gravity="center" android:layout_marginTop="20dip" android:layout_marginBottom="20dip">

			<Button android:layout_height="wrap_content" android:id="@+id/getcoupon"
				android:layout_width="wrap_content" android:background="@drawable/getcoupon">
			</Button>

		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="fill_parent" android:gravity="bottom|center" android:id="@+id/fond">
			<ImageView android:layout_height="wrap_content" android:id="@+id/layoutbottom"
				android:layout_width="fill_parent" android:background="@drawable/layoutbottom" />

		</LinearLayout>

	</LinearLayout>
</ScrollView>
