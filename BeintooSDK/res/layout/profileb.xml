<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myScroll" android:layout_width="fill_parent"
	android:scrollbars="vertical" android:layout_height="fill_parent"
	android:fillViewport="true">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/maincontainer"
		android:orientation="vertical" android:background="#d6dbde">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_alignParentLeft="true"
			android:layout_height="wrap_content" android:gravity="center" android:layout_width="fill_parent">
			<RelativeLayout
				android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/bpix">
				<ImageView android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:id="@+id/beintoobar"
					android:src="@drawable/beintoobar" android:layout_width="wrap_content"/>
				<Button android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/close"
					android:layout_alignParentRight="true" android:background="@drawable/close" android:layout_centerVertical="true" android:layout_marginRight="8dip"/>
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:padding="0dip"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/imageView1"
				android:layout_height="wrap_content" android:background="@drawable/layoutbottom"
				android:layout_marginLeft="18dip" android:layout_marginRight="18dip"
				android:layout_marginTop="10dip" android:layout_width="fill_parent"></ImageView>
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:id="@+id/goodcontent"
	 		android:layout_height="wrap_content"
			android:layout_marginLeft="18dip"
			android:layout_marginRight="18dip" android:background="#FFFFFF" android:layout_marginTop="0dip">
			<!-- PROFILE CONTENT -->

			<LinearLayout android:layout_width="fill_parent"
				android:orientation="vertical" android:id="@+id/contentprofile"
				android:layout_height="wrap_content" android:gravity="center">
				<LinearLayout android:layout_height="wrap_content"
					android:paddingTop="0dip" android:paddingLeft="20dip"
					android:orientation="horizontal" android:layout_width="fill_parent"
					android:layout_marginTop="15dip">
					<!-- <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
						android:id="@+id/profilepict" /> -->
					<com.beintoo.beintoosdkutility.LoaderImageView
						android:id="@+id/profilepict" android:layout_width="100px"
						android:layout_height="100px" />

					<LinearLayout android:layout_width="fill_parent"
						android:orientation="vertical" android:layout_margin="10dip"
						android:layout_height="wrap_content">
						<TextView android:id="@+id/nickname"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textColor="#83be56" android:text="Nickname" />
						<TextView android:id="@+id/level" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="#000000"
							android:text="Level" />
						<TextView android:id="@+id/bedollars"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textColor="#000000" android:text="Bedollars" />
						<TextView android:id="@+id/salary" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="#000000"
							android:text="Weekly salary" android:visibility="invisible"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="vertical" android:layout_height="wrap_content"
					android:id="@+id/contests" android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip" android:layout_marginTop="20dip" android:layout_marginBottom="20dip">
					<TextView android:id="@+id/textView1"
						android:layout_height="wrap_content" android:text="Your scores"
						android:textSize="14px" android:background="#40abd6"
						android:textColor="#FFFFFF" android:textStyle="bold"
						android:layout_width="fill_parent" android:layout_gravity="center"
						android:gravity="center" android:padding="10dip"></TextView>
				</LinearLayout>

			</LinearLayout>
			<!-- END PROFILE CONTENT -->
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/linearLayout3" android:layout_width="fill_parent">
			<ImageView android:id="@+id/imageView2"
				android:layout_height="wrap_content" android:background="@drawable/boxombr" android:layout_marginLeft="18dip"
				android:layout_marginRight="18dip" android:layout_marginTop="0dip"
				android:layout_marginBottom="15dip" android:layout_width="fill_parent"></ImageView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:id="@+id/convll"
			android:layout_height="wrap_content" android:gravity="center" android:layout_marginBottom="20dip" android:layout_marginTop="0dip">

			<Button android:layout_height="wrap_content" android:id="@+id/logout"
				android:layout_width="wrap_content" android:background="@drawable/logoutbt">
			</Button>

		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="fill_parent" android:gravity="bottom|center" android:id="@+id/fond">
			<ImageView android:layout_height="wrap_content" android:id="@+id/layoutbottom"
				android:layout_width="fill_parent" android:background="@drawable/layoutbottom" />

		</LinearLayout>

	</LinearLayout>
</ScrollView>
