<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/myScroll" android:layout_width="fill_parent"
	android:scrollbars="vertical" android:layout_height="fill_parent"
	android:fillViewport="true">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/maincontainer"
		android:orientation="vertical" android:background="#d6dbde">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:layout_height="wrap_content">
			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:gravity="center"
				android:background="#dadfe2">
				<ImageView android:layout_height="wrap_content"
					android:layout_centerHorizontal="true" android:id="@+id/beintoobar"
					android:background="@drawable/beintoobar" android:layout_width="fill_parent" />
				<Button android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/close"
					android:layout_alignParentRight="true" android:background="@drawable/close"
					android:layout_margin="12dip" />
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/welcome" android:orientation="vertical"
			android:background="#d6dbde" android:layout_height="wrap_content">
			<TextView android:textStyle="bold" android:text="Welcome back"
				android:id="@+id/nickname" android:background="#afd4e3" android:layout_width="fill_parent"
				android:textColor="#FFFFFF" android:paddingLeft="10dip" android:gravity="center_vertical" android:layout_height="40dip"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView android:id="@+id/imageView1"
				android:layout_height="wrap_content" android:background="@drawable/layoutbottom"
				android:layout_marginLeft="18dip" android:layout_marginRight="18dip"
				android:layout_marginTop="10dip" android:layout_width="fill_parent"></ImageView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/maincontainer" android:orientation="vertical"
			android:background="#d6dbde" android:gravity="center"
			android:layout_height="wrap_content">
			<TableLayout android:id="@+id/myTableLayout"
				android:layout_height="wrap_content" android:scrollbars="vertical"
				android:background="#FFFFFF" android:layout_width="fill_parent"
				android:layout_marginLeft="18dip" android:layout_marginRight="18dip">
				<TableRow android:background="#f4f5f6" android:gravity="center">
					<ImageButton android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/profilebt"
						android:layout_alignParentTop="true" android:background="@drawable/profilebt"
						android:layout_margin="10dip">
					</ImageButton>
					<Button android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/leaderboardbt"
						android:background="@drawable/leaderbt" android:layout_margin="10dip">
					</Button>
				</TableRow>
				<TableRow android:background="#f4f5f6" android:gravity="center">
					<Button android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/walletbt"
						android:background="@drawable/wallet" android:layout_margin="10dip">
					</Button>
					<Button android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true" android:background="@drawable/challenges"
						android:layout_margin="10dip" android:id="@+id/challengesbt">
					</Button>
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/linearLayout3" android:layout_width="fill_parent">
			<ImageView android:id="@+id/imageView2"
				android:layout_height="wrap_content" android:background="@drawable/boxombr"
				android:layout_marginLeft="18dip" android:layout_marginRight="18dip"
				android:layout_marginTop="0dip" android:layout_width="fill_parent" android:layout_marginBottom="20dip"></ImageView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/www" android:orientation="vertical" android:gravity="bottom|center" android:layout_height="fill_parent">
			<TextView android:text="www.beintoo.com" android:id="@+id/nickname"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:textColor="#56b3d8" android:gravity="center" android:paddingBottom="20dip"></TextView>
			<ImageView android:layout_height="wrap_content" android:id="@+id/layoutbottom"
				android:background="@drawable/layoutbottom"
				android:layout_width="fill_parent">
			</ImageView>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
	
